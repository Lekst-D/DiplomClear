<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/IDLinearLayoutMess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:background="@drawable/mess_color"
        android:layout_gravity="left"

        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <!--        android:layout_gravity="center"-->


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:maxWidth="300dp"
            android:layout_height="wrap_content"
            android:maxHeight="330dp"
            android:id="@+id/IDImageView"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/IDMessText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Text message for example"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/IDMessDataTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="Text"
            android:textSize="10dp" />

    </LinearLayout>

</LinearLayout>